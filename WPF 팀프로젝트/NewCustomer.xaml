                <TextBlock HorizontalAlignment="Left" Margin="37,42,0,0" TextWrapping="Wrap" Text="이름" VerticalAlignment="Top" Foreground="#FF48A7C6" FontWeight="Bold"/>
                <TextBox x:Name="nameBox" HorizontalAlignment="Left" Height="23" Margin="103,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{x:Null}" MaxLength="5" FontWeight="Bold" FontSize="14" SelectionBrush="#FF0A0A0A" Foreground="#FF161A1B" BorderBrush="#FF48A7C6"/>
