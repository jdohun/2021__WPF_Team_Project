                <TextBox x:Name="phoneBox" HorizontalAlignment="Left" Height="23" Margin="103,99,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{x:Null}" MaxLength="11" FontWeight="Bold" FontSize="14" BorderBrush="#FF48A7C6"/>
                <Button Content="등록" HorizontalAlignment="Left" Margin="181,139,0,0" VerticalAlignment="Top" Width="75" Height="36" Click="Button_Click" Background="#FF48A7C6" BorderBrush="#FFFEFEFE" Foreground="#FFFAFAFA"/>
            </Grid>
        </Border>
    </Grid>
</Page>
